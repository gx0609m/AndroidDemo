<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/fixedThreadPool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FixedThreadPool"/>

    <Button
        android:id="@+id/cachedThreadPool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CachedThreadPool"/>

    <Button
        android:id="@+id/scheduledThreadPool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScheduledThreadPool"/>

    <Button
        android:id="@+id/singleThreadExecutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SingleThreadExecutor"/>

    <Button
        android:id="@+id/singleThreadScheduledExecutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SingleThreadScheduledExecutor"/>

</LinearLayout>
